<?xml version="1.0" encoding="utf-8"?>
<!-- 所有自定义VIEW的属性集合 -->
<resources>
    <declare-styleable name="MoveHideView"><!-- 模仿UC浏览器界面的约拍view -->
        <attr name="pageHeadViewHeight" format="dimension"></attr><!-- 页面头部搜索框的高度 -->
        <attr name="isPageHeadViewFixed" format="boolean"></attr><!-- 搜索框是否固定，此属性为true的话PageHeadView则会固定在界面顶部不会滑动,此属性为false的话PageHeadView会首先隐藏再慢慢滑出 -->
        <attr name="pageHeadViewLayoutId" format="reference"></attr><!-- UC页面头部内容的布局资源ID -->
        <attr name="pageNavigationViewHeight" format="dimension"></attr><!-- 按钮（约拍+活动） -->
        <attr name="pageNavigationViewLayoutId" format="reference"></attr><!-- 按钮布局资源ID -->
        <attr name="isContentHeadViewEnable" format="boolean"></attr><!-- 约拍活动列表头是否开启 -->
        <attr name="contentHeadViewHeight" format="dimension"></attr><!-- 约拍活动列表头高度 -->
        <attr name="contentHeadViewLayoutId" format="reference"></attr><!-- 约拍活动列表头布局资源ID -->
        <attr name="contentViewLayoutId" format="reference"></attr><!-- 约拍活动列表布局资源ID -->
        <attr name="autoSlipDistanceStep" format="dimension"></attr><!-- 手指放开后，视图自动滑动时的每次滑动距离间隔，默认每次滑动20px -->
        <attr name="autoSlipTimeStep" format="integer"></attr><!-- 手指放开后，视图自动滑动时的时间间隔，默认每间隔5毫秒滑动一次 -->
        <attr name="isPullRestoreEnable" format="boolean"></attr><!-- 是否允许下拉时恢复初始化状态 -->
    </declare-styleable>
</resources>