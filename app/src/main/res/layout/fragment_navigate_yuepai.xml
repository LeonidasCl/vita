<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:yuepai="http://schemas.android.com/apk/res-auto">
    <android.support.percent.PercentFrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:loginlayout="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <cn.bingoogolapple.bgabanner.BGABanner
        android:layout_height="0dp"
        android:layout_width="0dp"
        loginlayout:layout_heightPercent="80%"
        loginlayout:layout_widthPercent="80%"
        android:id="@+id/banner_main_zoom"
        style="@style/BannerDefaultStyle"
        yuepai:banner_transitionEffect="zoom" />
    </android.support.percent.PercentFrameLayout>

</LinearLayout>