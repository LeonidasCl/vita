<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".Activity.LoginActivity"
             android:background="@drawable/login_bg">

<android.support.percent.PercentRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:loginlayout="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
    android:id="@+id/login_upside"
    android:layout_width="0dp"
    android:layout_height="0dp"
    loginlayout:layout_heightPercent="50%"
    android:layout_gravity="top"
    loginlayout:layout_widthPercent="100%"
    android:layout_alignParentTop="true">
    <android.support.percent.PercentFrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:loginlayout="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        loginlayout:layout_heightPercent="40%"
        loginlayout:layout_widthPercent="30%"
        android:scaleType="centerCrop"
        android:layout_gravity="center_horizontal|center_vertical"
        android:gravity="center_horizontal|center_vertical"
        android:src="@drawable/login_logo"
        android:contentDescription="@string/app_name"/>
    </android.support.percent.PercentFrameLayout>
</RelativeLayout>


    <RelativeLayout
        android:layout_below="@+id/login_upside"
        android:id="@+id/login_centerside1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        loginlayout:layout_heightPercent="10%"
        loginlayout:layout_widthPercent="100%">
            <android.support.percent.PercentFrameLayout
            android:id="@+id/login_percentup"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:loginlayout="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <com.example.pc.vita.View.Custom.IconTextView
        xmlns:iconview="http://com.licl.icontext"
        iconview:iconSrc="@drawable/login_email"
        android:id="@+id/login_username"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#50000000"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:hint="@string/prompt_email"
        android:gravity="center_vertical"
        loginlayout:layout_heightPercent="90%"
        loginlayout:layout_widthPercent="50%"
        android:textColorHint="@color/white"
        android:textColorHighlight="#ffffff"
        android:maxLines="1"
        android:singleLine="true"
        android:textSize="12sp"/>
        </android.support.percent.PercentFrameLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/login_centerside1"
        android:id="@+id/login_centerside"
        android:layout_width="0dp"
        android:layout_height="0dp"
        loginlayout:layout_heightPercent="10%"
        loginlayout:layout_widthPercent="100%">
        <android.support.percent.PercentFrameLayout
            android:id="@+id/login_percentdown"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:loginlayout="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <com.example.pc.vita.View.Custom.IconTextView
        xmlns:iconview="http://com.licl.icontext"
        iconview:iconSrc="@drawable/login_password"
        android:id="@+id/login_password"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#50000000"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        loginlayout:layout_heightPercent="90%"
        loginlayout:layout_widthPercent="50%"
        android:hint="@string/prompt_password"
        android:inputType="textPassword"
        android:textColorHint="@color/white"
        android:textColorHighlight="#ffffff"
        android:textStyle="bold"
        android:maxLines="1"
        android:singleLine="true"
        android:textSize="12sp"/>
        </android.support.percent.PercentFrameLayout>
    </RelativeLayout>



    <RelativeLayout
        android:layout_below="@+id/login_centerside"
        android:layout_width="0dp"
        android:layout_height="0dp"
        loginlayout:layout_heightPercent="30%"
        loginlayout:layout_widthPercent="100%"
        android:layout_gravity="bottom">
        <android.support.percent.PercentFrameLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:loginlayout="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <com.example.pc.vita.View.RoundCornerImgView
        android:id="@+id/btn_login"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:background="#E3BD65"
        loginlayout:layout_heightPercent="30%"
        loginlayout:layout_widthPercent="45%"
        android:layout_gravity="top|center_horizontal"/>
            <ImageView
                android:contentDescription="@string/app_name"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitStart"
                android:background="#E3BD65"
                android:src="@drawable/login_button"
                loginlayout:layout_heightPercent="30%"
                loginlayout:layout_widthPercent="45%"
                android:layout_gravity="top|center_horizontal"
                android:textSize="12sp"/>
     <TextView
         loginlayout:layout_heightPercent="30%"
         loginlayout:layout_widthPercent="45%"
         android:layout_width="0dp"
         android:layout_height="0dp"
         android:layout_marginTop="10dp"
         android:text="@string/text_login_btn"
         android:textColor="#ffffff"
         android:layout_gravity="top|center_horizontal"
         android:gravity="center_vertical|center_horizontal"
         android:textSize="22sp"
                />
        </android.support.percent.PercentFrameLayout>
    </RelativeLayout>

    </android.support.percent.PercentRelativeLayout>

</RelativeLayout>
