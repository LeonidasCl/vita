

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pc.vita.Fragment.YuePaiFragment">

    <android.support.percent.PercentFrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00ffff00">

        <Button
            android:id="@+id/button_yuepai"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="约拍"
            app:layout_heightPercent="10%"
            app:layout_widthPercent="40%"
            app:layout_marginTopPercent = "3%"
            app:layout_marginLeftPercent = "8%"/>

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="#000000"
            android:layout_gravity="center_horizontal"
            app:layout_marginTopPercent = "3%"
            app:layout_heightPercent="10%"/>

        <Button
            android:id="@+id/button_activity"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="活动"
            android:layout_gravity="right"
            app:layout_heightPercent="10%"
            app:layout_widthPercent="40%"
            app:layout_marginTopPercent = "3%"
            app:layout_marginRightPercent = "8%"/>

        <android.support.percent.PercentRelativeLayout android:id="@+id/top"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="80%"
            app:layout_heightPercent="10%"
            app:layout_marginTopPercent = "17%"
            app:layout_marginLeftPercent = "10%">

            <Button android:id="@+id/btnSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textSize="12sp"
                android:textStyle="bold"
                android:text="搜索"/>

            <RelativeLayout android:id="@+id/rlSearchFrameDelete"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_toLeftOf="@id/btnSearch">

                <EditText android:id="@+id/etSearch"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="32dp"
                    android:textSize="12sp"
                    android:hint="请输入文字..."/>

                <ImageView android:id="@+id/ivDeleteText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:paddingRight="20dp"
                    android:visibility="gone"/>
            </RelativeLayout>

        </android.support.percent.PercentRelativeLayout>

        <ListView
            android:id="@+id/activty_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:text="111"
            app:layout_widthPercent="90%"
            app:layout_marginTopPercent="32%"
            app:layout_heightPercent="68%"></ListView>

    </android.support.percent.PercentFrameLayout>

</FrameLayout>
